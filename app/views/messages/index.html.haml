  %body
    .flash-box
      .notice sample
    .wrapper
      .chat-side
        .side-header
          .side-header__box
            %p.side-header__user-name Kido
            %ul.side-header__box__menu
              %li.side-header__box__menu__new-group
                %a{href:"/groups/new"}
                  %i.fa.fa-edit
              %li.side-header__box__menu__edit-user
                %a{href:"/users/sample/edit"}
                  %i.fa.fa-cog
        .groups
          %a{href:"/groups/sample/messages"}
            .group
              %p.group__group-name グループネーム
              %p.group__latest-messages sample
      .chat-main
        .main-header
          .main-header__left-box
            %h2.main-header__left-box__current-group{"data-group_id":"2561"}
              a
            %ul.main-header__left-box__member-list
              Member：
              %li.main-header__left-box__member-list__member kido
          %a{href:"/groups/2561/edit"}
            .main-header__edit-btn Edit
        .messages
           = render @messages
            .form
              = form_for [@group, @message] do |f|
                = f.text_field :content, class: 'form__message', placeholder: 'type a message'
                .form__mask
                  = f.label :image, class: 'form__mask__image' do
                    = fa_icon 'picture-o', class: 'icon'
                    = f.file_field :image, class: 'hidden'
                = f.submit 'Send', class: 'form__submit'